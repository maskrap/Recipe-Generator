<div class="comments">
  <div class="comment-me">
    <h3>Add a comment</h3>
  </div>
  <div class="comment-form">
    <form>
      <div class="form-group">
        <div class="form-name">
          {{input value=name id="name" placeholder="Name"}}
        </div>
        <div class="form-comment">
          {{input value=comment id="comment" placeholder="Comment"}}
        </div>
        <div class="form-rating">
          {{input type="number" min="1" max="5" value=rating id="rating" placeholder="1-5 Stars"}}
        </div>
      </div>
    </form>
  </div>
  <button {{action 'saveComment'}} class="favorites">Add a Comment</button>
</div>
